<% provide(:title, 'Log in') %>
<h1>Log in</h1>
<h2>เข้าสู่ระบบ</h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %> <%= f.label "อีเมล์", class:"subthai" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %> <%= f.label "รหัสผ่าน", class:"subthai" %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-danger" %>
    <% end %>
    <br>
    <p class="center">กด Sign up เพื่อสร้างบัญชีใหม่ ใช้เวลาไม่ถึง 1 นาที</p>
    <div class="center">
    <%= link_to signup_path do %>
      <div class="btn btn-primary">Sign up</div>
    <% end %>
    </div>
  </div>
</div>