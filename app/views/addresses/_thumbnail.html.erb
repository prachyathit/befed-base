<div class="col-sm-6 <%= thumb_class_for_address(address) %>" address-id="<%= address.id %>">
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= address.name %>
      <div class="pull-right">
        <%= link_to "", edit_address_path(address.id),  { class: "glyphicon glyphicon-pencil" } %>
        <%= link_to "", address_path(address),  
            data: { confirm: 'Are you sure?' },
            method: :delete,
            class: "glyphicon glyphicon-trash"
          %>
      </div>
      <div class="clearfix;"></div>
    </div>
    <div class="panel-body">
      <div><%= address.full_address %></div>
      <div>
        <div id="googleMap<%= address.id %>" class="thumb-map">
          <%= render partial: "shared/map_display", locals: {latitude: address.latitude, 
            longitude: address.longitude, 
            elementId: "googleMap#{address.id}"} %>
        </div>
      </div>
    </div>
  </div>
</div>
