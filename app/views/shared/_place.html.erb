<div id="place-modal" class="modal fade">
  <div class="modal-dialog modal-lg">
    <div class="modal-header">
      Select Condo, Mooban<br>
      If your place is not listed here, click others
    </div>
    <div class="modal-content main-bg">
      <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
      <div class="clearfix"></div>
      <div class="place-border">
      <div class="row">
        <% @places.each do |place| %>
          <div class="col-xs-12 col-sm-6">
            <%= form_for(:saddress, url: submit_saddress_path) do |f| %>
              <%= f.hidden_field :faddress, value: place.address %>
              <%= f.hidden_field :latitude, value: place.latitude %>
              <%= f.hidden_field :longitude, value: place.longitude %>
              <div><%= f.submit place.name, class: "btn btn-default btn-place" %></div>
            <% end %>
          </div>
        <% end %>
        <div class="col-xs-12 col-sm-6">
          <button type="button" class="btn btn-default btn-place switch-map">Others</button>
        </div>      
      </div>
      </div>
    </div>
  </div>
</div>