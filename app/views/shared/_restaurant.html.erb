<div class="row">
  <div class='col-md-4 col-xs-4 left-column'>
    <%= image_tag(restaurant.image_url, alt: "image", class: "restaurant-image") %>
  </div>
  <div class='col-md-8 col-xs-8 right-column'>
    <div class='title'><%= restaurant.name %></div>
    <% if restaurant.soon %>
      <div class='delivery-hours'>&nbsp;&nbsp;&nbsp;Close&nbsp;&nbsp;&nbsp;&nbsp;</div>
    <% elsif restaurant.cday == Time.now.wday %>
      <div class='delivery-hours'>&nbsp;&nbsp;&nbsp;Close Today&nbsp;&nbsp;&nbsp;&nbsp;</div>
    <% else %>
      <div class='estimated-delivery'><i class="fa fa-truck fa-lg"></i>&nbsp;&nbsp;&nbsp;Estimated delivery time: <%= restaurant.dtime %> Minutes</div>
      <div class='delivery-hours'>&nbsp;<i class="fa fa-clock-o fa-lg"></i>&nbsp;&nbsp;&nbsp;Delivery hours: <%= restaurant.dhour %>&nbsp;&nbsp;&nbsp;&nbsp;</div>
      <div class='estimated-delivery'><i class="fa fa-money fa-lg"></i>&nbsp;&nbsp;&nbsp;Minimum order: <%= restaurant.min_order %> à¸¿</div>
    <% end %>
  </div>
</div>

