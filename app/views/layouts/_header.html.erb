<nav class = "navbar navbar-custom navbar-fixed-top">
  <div class = "container">
    <div class="navbar-header">
      <%= link_to "Befed", root_path, id: "logo" %>
      <p id="sublogo">Food Delivery</p>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav navbar-left">
        <!--Address-->
        <% unless ["Landing", "Sign up", "Edit user", "clearmap"].include? yield(:hidden_title)%>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle text-color" data-toggle="dropdown">
              <i class="fa fa-map-marker fa-lg theme-color"></i>
              <div class="address_header"><%= session[:saddress]["faddress"] %></div>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu dropdown-location">
              <%= render partial: "shared/map", locals: { button_name: "I'm here" } %>
            </ul>
          </li>
        <% end %>
        <!--Address END-->
      </ul>
      <ul class = "nav navbar-nav navbar-right">
        <!--CART -->
        <% unless yield(:hidden_title) == "Landing" %>
          <% if session[:cart] %>
            <% get_cart_size %>
          <% end %>
          <li>
            <%= link_to checkout_path do %>
              <i class="fa fa-shopping-bag fa-lg"></i>
              <span id="cartnum" class="text-color">
                <%= pluralize(@cart_size, 'Item') %>
              </span>
            <% end %>
          </li>
        <% end %>
        <!--CART END-->
        <% if user_admin? %>
          <li><%= link_to "Users", users_path%></li>
          <li><%= link_to "Options", options_path %></li>
        <% end %>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle text-color" data-toggle="dropdown">
              <i class="fa fa-user fa-lg theme-color button-offset"></i>
                <span class="text-color">
                  Account
                </span>

              <b class="caret text-color"></b>
            </a>
            <ul class="dropdown-menu text-color">
              <li><%= link_to "Profile", current_user,  { :class=>"text-color" } %></li>
              <li><%= link_to "Settings", edit_user_path(current_user),  { :class=>"text-color" } %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, { :class=>"text-color", method: "delete"} %></li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to login_path do %>
            <i class="fa fa-user fa-lg theme-color button-offset"></i>
              <span class="text-color">
                Sign in
              </span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
