<% provide(:hidden_title, 'Landing') %>

<div class='jumbotron-landing'>
  <div class="tagline center">Food from Top Restaurants near you</div>
  <div class="tagline center">
    Deliver with <span class="glyphicon glyphicon-heart", style="color:red"></span>
  </div>
  <div class="row hide-mobile">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="col-sm-4 center">
        <span class="glyphicon glyphicon-map-marker"></span>
        <p>Locate</p>
      </div>
      <div class="col-sm-4 center">
        <span class="glyphicon glyphicon-hand-up"></span>
        <p>Choose</p>
      </div>
      <div class="col-sm-4 center">
        <span class="glyphicon glyphicon-cutlery"></span>
        <p>Eat</p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= form_for(:saddress, url: submit_saddress_path) do |f| %>
        <%= f.text_field :faddress, class: "location form-control" %>
        <%= f.hidden_field :latitude , class: "longitude" %>
        <%= f.hidden_field :longitude ,  class: "latitude" %>
        <div id="map-container" class="geomap">
          <div id="map" class="geomap"></div>
        </div>
        <%= f.submit "Feed me now!", class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>