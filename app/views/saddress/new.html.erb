<% provide(:hidden_title, 'Landing') %>

<div class='jumbotron-landing'>
  <div class="landing-title center">
    Delicious Food<br>
    Deliver with <span class="glyphicon glyphicon-heart" style="color:red;"></span><br>
    <span class="kanit jumbothai">สั่งอาหารเดลิเวอรี่ แจ้งวัฒนะ</span>
  </div>
  <div class="center">
    <button type="button" class="showmap margin-5 btn btn-default"><strong>Enter Delivery Location</strong><br><span class="kanit thai-btn">ระบุตำแหน่งจัดส่ง</span></button>
  </div>
</div>
<%= render partial: "shared/map_modal", 
  locals: { 
    button_name: "Find Restaurants",
    return_url: root_path,
    submit_url: restaurants_path,
    cancel_url: root_path
  } %>

<div class='container-fluid landing-page-pane'>
  <div class='landing-pane-bg red'>
    <div class='landing-title'>Order in 3 easy steps</div>
    <div class='row'>
      <div class='col-xs-4'>
        <div class= 'landing-subtitle'>1. Enter Delivery Location</div>     
      </div>
      <div class='col-xs-4'>
        <div class='landing-subtitle'>2. Select Menu</div>
      </div>
      <div class='col-xs-4'>
        <div class='landing-subtitle'>3. Review & Pay by Cash/Credit Card</div>
      </div>
    </div>
    <div class='row'>
      <div class='col-xs-4'>
        <img class='landing-image-row' style='max-height: 500px;' src='<%= asset_path("locate.jpg") %>'></img>
      </div>
      <div class='col-xs-4'>
        <img class='landing-image-row' style='max-height: 500px;' src='<%= asset_path("order.jpg") %>'></img>
      </div>
      <div class='col-xs-4'>
        <img class='landing-image-row' style='max-height: 500px;' src='<%= asset_path("order_summary_2.jpg") %>'></img>
      </div>
    </div>
  </div>
  <div class='landing-pane theme-color'>
    <div class='landing-title'>Deliver from</div>
    <div class="col-lg-3 col-md-4 col-xs-6">
        <img class="img-responsive thumbnail" src='<%= asset_path("logo_salad.png") %>'></img>
    </div>
    <div class="col-lg-3 col-md-4 col-xs-6">
      <img class="img-responsive thumbnail" src='<%= asset_path("logo_kejkaew.png") %>'></img>
