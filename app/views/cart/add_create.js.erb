$("#product-modal").modal("hide")
$("#cartnum").html('<%= "#{@cart_size}" %>')
$("#cartnum2").html('<%= pluralize(@cart_size, 'Item') %>')

$(".cart-link, .scart").css({
    "background-color" : "#ef5a50",
})
$(".fa-shopping-bag, #cartnum, #cartnum2").css({
    "color" : "white",
})

$(".cart-link").hover(function() {
  $(".fa-shopping-bag, #cartnum, #cartnum2").css("color","#ef5a50")
}, function() {
  $(".fa-shopping-bag, #cartnum, #cartnum2").css("color","white")
});