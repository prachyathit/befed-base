<% provide(:hidden_title, 'clearmap') %>
<div class='container'>
  <div class='row order-checkout'>
    <div class='col-xs-6 user-information-container'>
      <div class="geomap">
        <div id="googleMap" class="geomap"></div>
      </div>
      <div class="deliverying-to-container">
        <div class="title">
          Delivering to
        </div>
        <div class="detail">
          <%= @user.address %>
        </div>
      </div>
      <div class="phone-info-container">
        <div class="title">
          Phone
        </div>
        <div class="detail">
          <%= @user.phone %>
        </div>
      </div>
      <div class="credit-card-payment-container">
        <div class="title">
          <%= render partial: "payment" %>
        </div>
      </div>
    </div>
    <div class='col-xs-6 order-summary-container'>
      <div class='order-summary'>
        <div class='title'>
          Your order
        </div>
        <div class='order-items'>
          <% cumulative_quantity = 0 %>
          <% total = 0 %>
          <% @cart.each do |id, order_info| %>
            <% food = Food.find(order_info["food_id"]) %>
            <% quantity = order_info["quantity"].to_i %>

            <% cumulative_quantity += quantity %>

            <% options = order_info["options"] %>

            <% @food_price = 0 %>

            <%= render partial: 'shared/order_item', locals: { name: food.name, id: id, price: food.price, quantity: order_info["quantity"], options: options } %>

            <% total += quantity * @food_price %>

          <% end %>
        </div>
        <hr>
        <% delivery_fee = 70 %>
        <%= render partial: 'shared/order_details', locals: { cumulative_quantity: cumulative_quantity, total: total, delivery_fee: delivery_fee } %>
        <hr>
        <div class="order-total">
          Order total <span class="theme-color">&nbsp;<%= "#{total + delivery_fee}à¸¿" %></span>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
var myCenter=new google.maps.LatLng(<%= @user.latitude %>,<%= @user.longitude %>);
function initialize()
{
var mapProp = {
  center:myCenter,
  zoom:17,
  mapTypeId:google.maps.MapTypeId.ROADMAP,
  scrollwheel:false
  };
var map=new google.maps.Map(document.getElementById("googleMap"),mapProp);
var marker=new google.maps.Marker({
  position:myCenter,
  });
marker.setMap(map);
}
google.maps.event.addDomListener(window, 'load', initialize);
</script>
