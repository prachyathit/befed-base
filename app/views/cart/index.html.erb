<p><%= link_to 'Back to Menu', restaurant_foods_path(session[:restaurant_id]) %></p>
<h1>Your Cart</h1>
<% if @cart.empty? %>
  <p>Your cart is currently empty.</p>
<% else %>
  <%= link_to 'Empty Your Cart', cart_clear_path %>
<% end %>
<br></br>

<% total = 0 %>

<ul>
<% @cart.each do |id, quantity| %>
  <% food = Food.find(id) %>


    <li>
      <p><%= food.name %></p>
      <p><%= number_to_currency(food.price, unit: "THB", format: "%n %u") %></p>
      <p>Quantity: <%= quantity %></p>
    </li>

    <% total += quantity * food.price %>

<% end %>
</ul>
<p><b>Total: <%= number_to_currency(total, unit: "THB", format: "%n %u") %></b></p>

<% unless @cart.empty? %>
  <%= link_to "Checkout", checkout_path %>
<% end %>