<% provide(:title, "Forgot password") %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3 theme-background forgot-password-container">
      <h1>Forgot password</h1>
      <h2>ลืมรหัสผ่าน</h2>
      <h2>กรุณากรอกอีเมล์และกด Submit</h2>
      <h2>เราจะส่งลิงค์ในการเปลี่ยนรหัสผ่านไปให้คุณ</h2>
      <%= form_for(:password_reset, url: password_resets_path) do |f| %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
        <%= f.submit "Submit", class: "btn form-btn form-control" %>
      <% end %>
    </div>
  </div>
